<div class="card">
  <header class="card-header">
    <p class="card-header-title">
    <h1 class="title"><%= @article.name %></h1>
    </p>
    <a href="#" class="card-header-icon" aria-label="more options">
      <span class="icon">
        <i class="fas fa-angle-down" aria-hidden="true"></i>
      </span>
    </a>
  </header>
  <hr>
  <div class="card-content">
    <div class="content">
    <h2 class="subtitle"><%= @article.description %></h2>
  </div>
  <footer class="card-footer">
    <%= link_to 'Back', articles_path, class:"button is-info"%>
    <% if logged_in? &&  @article.user %>
      <%= link_to 'Edit', edit_article_path, class:"button is-warning" %>
      <%= link_to 'Delete', article_path, method: :delete, data: {confirm: "Are you sure?"},class:"button is-danger" %>
    <% end %>
  </footer>
</div>

