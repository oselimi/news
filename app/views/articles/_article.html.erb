<% obj.each do |article| %>
  <div class="card">
    <div class="card-content">
      <p class="title">
        <%= article.name %>
      </p>
      <p class="subtitle">
        <%= article.description%>
      </p>
    </div>
    <footer class="card-footer">
      <p class="card-footer-item">
        <span>
          <%= link_to 'View all', article_path(article)%>
        </span>
      </p>
    </footer>
  </div>
<% end %>